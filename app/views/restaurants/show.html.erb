
<h2> Restaurant name: <%= @restaurant.name %> </h2>
<p> rating: <%= @restaurant.rating %>  address: <%= @restaurant.address %> tel nr: <%= @restaurant.tel_nr %> chef: <%= @restaurant.chef %>  </p>


<%= @restaurant.reviews.each do |review| %>
<p> <%= review.content %></p>
<%= link_to 'delete review', review_path(review), method: :delete %>
<hr>
<% end %>

<%= link_to 'Back to restaurants', restaurants_path %>
<%= link_to 'Edit restaurant', edit_restaurant_path(@restaurant) %>
<%= link_to 'Delete', restaurant_path(@restaurant), method: :delete, data: {confirm: 'Are you sure?'} %>
<%= link_to 'Add a review', new_restaurant_review_path(@restaurant) %>


